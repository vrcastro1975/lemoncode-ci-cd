pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Lemoncode/bootcamp-devops-lemoncode.git', branch: 'master'
            }
        }
        stage('Compile') {
            steps {
                script {
                    docker.image('gradle:6.6.1-jdk17').inside {
                        sh 'chmod +x /workspace/03-cd/exercises/jenkins-resources/calculator/gradlew'
                        sh '/workspace/03-cd/exercises/jenkins-resources/calculator/gradlew compileJava'
                    }
                }
            }
        }
        stage('Unit Tests') {
            steps {
                script {
                    docker.image('gradle:6.6.1-jdk17').inside {
                        sh '/workspace/03-cd/exercises/jenkins-resources/calculator/gradlew test'
                    }
                }
            }
        }
    }
}
