pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Lemoncode/bootcamp-devops-lemoncode.git', branch: 'main'
            }
        }
        stage('Compile') {
            steps {
                sh './calculator/gradlew compileJava'
            }
        }
        stage('Unit Tests') {
            steps {
                sh './calculator/gradlew test'
            }
        }
    }
}
