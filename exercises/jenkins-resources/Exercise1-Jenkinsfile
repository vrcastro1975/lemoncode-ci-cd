pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Lemoncode/bootcamp-devops-lemoncode.git', branch: 'master'
            }
        }
        stage('List Files') {
            steps {
                sh 'ls -la'
                sh 'ls -la calculator'
            }
        }
        stage('Compile') {
            steps {
                dir('calculator') {
                    sh 'chmod +x gradlew'
                    sh './gradlew compileJava'
                }
            }
        }
        stage('Unit Tests') {
            steps {
                dir('calculator') {
                    sh './gradlew test'
                }
            }
        }
    }
}

