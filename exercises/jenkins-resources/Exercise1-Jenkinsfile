pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Lemoncode/bootcamp-devops-lemoncode.git', branch: 'master'
                // Verificar la estructura después de clonar
                sh 'echo "Directorio actual:"'
                sh 'pwd'
                sh 'echo "Archivos después del checkout:"'
                sh 'ls -R'
            }
        }
        stage('Compile') {
            steps {
                sh 'chmod +x ./calculator/gradlew'
                sh './calculator/gradlew compileJava'
            }
        }
        stage('Unit Tests') {
            steps {
                sh './calculator/gradlew test'
            }
        }
    }
}