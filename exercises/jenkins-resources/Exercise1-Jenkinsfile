pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Lemoncode/bootcamp-devops-lemoncode.git', branch: 'master'
            }
        }
        stage('Compile') {
            steps {
                sh 'cd calculator && chmod +x gradlew && ./gradlew compileJava'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'cd calculator && ./gradlew test'
            }
        }
    }
}
