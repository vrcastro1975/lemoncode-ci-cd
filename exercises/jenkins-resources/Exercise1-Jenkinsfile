pipeline {
    agent any
    environment {
        JAVA_HOME = "/opt/java/openjdk/"
        PATH = "${JAVA_HOME}/bin:${env.PATH}"
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Lemoncode/bootcamp-devops-lemoncode.git', branch: 'master'
            }
        }
        stage('Verify Gradle Version') {
            steps {
                sh './03-cd/exercises/jenkins-resources/calculator/gradlew --version'
            }
        }
        stage('Compile') {
            steps {
                sh 'chmod +x ./03-cd/exercises/jenkins-resources/calculator/gradlew'
                sh './03-cd/exercises/jenkins-resources/calculator/gradlew compileJava'
            }
        }
        stage('Unit Tests') {
            steps {
                sh './03-cd/exercises/jenkins-resources/calculator/gradlew test'
            }
        }
    }
}